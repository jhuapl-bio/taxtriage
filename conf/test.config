/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running minimal tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a fast and simple pipeline test.

    Use as follows:
        nextflow run https://github.com/jhuapl-bio/taxtriage -latest -profile test,docker  -r main

----------------------------------------------------------------------------------------
*/

params {
    config_profile_name        = 'Test profile'
    config_profile_description = 'Minimal test dataset to check pipeline function'

    // Limit resources so that this can run on GitHub Actions
    max_memory = '12.GB'
    max_time   = '10.h'

    // Input data
    // TODO nf-core: Specify the paths to your test data on nf-core/test-datasets
    // TODO nf-core: Give any required params for the test so that command line flags are not needed
    input  = 'https://raw.githubusercontent.com/jhuapl-bio/taxtriage/main/examples/Samplesheet.csv'

    // Genome references
    skip_plots = false
    download_db = true
    remove_taxids = "9606"
    demux = true
    remove_commensal = true
    classifiers = 'kraken2'
    outdir = 'test_output'
    top_hits_count = 10
    taxtab = 'default'
    default_download = true
    db = 'test'
    top_per_taxa = '10239:10:S 2:10:S'
    outdir = 'test_output'
    k2_minimum_hit_groups = 3
    low_memory = false
    min_conf = 0.1
}
